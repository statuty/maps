<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        android:paddingEnd="5dp"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:text="@string/loc_dot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/marker_name"
            android:ems="10"
            android:id="@+id/name"
            android:inputType="text"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black" />

        <TextView
            android:text="@string/marker_name"
            android:layout_width="385dp"
            android:layout_height="32dp"
            android:id="@+id/textView9"
            android:labelFor="@+id/name"
            android:layout_alignTop="@+id/linearLayout2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="14sp"
            android:layout_marginLeft="5dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_cat"
            android:layout_column="1"
            android:layout_weight="1" />

        <TextView
            android:text="@string/marker_category"
            android:layout_width="385dp"
            android:layout_height="32dp"
            android:id="@+id/textView11"
            android:labelFor="@+id/category"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="30"
            android:hint="@string/marker_desc"
            android:id="@+id/desc"
            android:textColorHint="@android:color/black" />

        <TextView
            android:text="@string/marker_desc"
            android:layout_width="385dp"
            android:layout_height="32dp"
            android:id="@+id/textView10"
            android:labelFor="@+id/desc"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="@string/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add"
                android:onClick="onAdd"
                android:background="@color/colorButton"
                android:layout_weight="1" />

            <Button
                android:text="@string/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edit"
                android:onClick="onEdit"
                android:background="@color/colorButton"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cancel"
                android:text="@string/canсel"
                android:onClick="onCancel"
                android:background="@color/colorButton"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>