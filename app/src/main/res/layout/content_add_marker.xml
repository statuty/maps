<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        android:paddingEnd="5dp"
        android:orientation="vertical"
        android:layout_marginTop="68dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="@string/marker_name"
            android:layout_width="385dp"
            android:layout_height="32dp"
            android:id="@+id/textView9"
            android:labelFor="@+id/name"
            android:layout_alignTop="@+id/linearLayout2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Name"
            android:ems="10"
            android:id="@+id/name" />

        <TextView
            android:text="@string/marker_category"
            android:layout_width="385dp"
            android:layout_height="32dp"
            android:id="@+id/textView11"
            android:labelFor="@+id/category"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="30"
            android:hint="Category"
            android:id="@+id/category" />

        <TextView
            android:text="@string/marker_desc"
            android:layout_width="385dp"
            android:layout_height="32dp"
            android:id="@+id/textView10"
            android:labelFor="@+id/desc"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="30"
            android:hint="Description"
            android:id="@+id/desc" />

        <Button
            android:text="@string/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add"
            android:onClick="onAdd" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cansel"
            android:text="@string/cansel"
            android:onClick="onCansel" />

        <Button
            android:text="@string/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit"
            android:onClick="onEdit" />
    </LinearLayout>
</RelativeLayout>